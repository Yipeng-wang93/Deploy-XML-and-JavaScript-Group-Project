  <Sections>
    <Section id="itinerary-builder">
      <Title>Build Your Travel Itinerary</Title>
      <Form>
        <Field>
          <Label for="destination">Select Destination:</Label>
          <Input type="text" id="destination" name="destination" placeholder="Enter your destination" required="true" />
        </Field>
        <Field>
            <Label for="Accomodation">Select Hotel:</Label>
            <select id="Hotel" name="Hotel">
          </Field>
        <Field>
          <Label for="start-date">Start Date:</Label>
          <Input type="date" id="start-date" name="start-date" required="true" />
        </Field>
        <Field>
          <Label for="end-date">End Date:</Label>
          <Input type="date" id="end-date" name="end-date" required="true" />
        </Field>
        <Field>
          <Label for="activities">Activities:</Label>
          <Textarea id="activities" name="activities" rows="4" placeholder="List activities you want to include" required="true" />
        </Field>
        <Button type="button" action="createItinerary">Create Itinerary</Button>
      </Form>
    </Section>

    <Section id="travel-guides">
      <Title>Travel Guides</Title>
      <GuidesList>
        <!-- Dynamic travel guides information -->
      </GuidesList>
      <DownloadContainer />
    </Section>
  </Sections>

